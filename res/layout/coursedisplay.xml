<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D6EBFF" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="#66C2FF" >

        <TextView
            android:id="@+id/coursename"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="17"
            android:gravity="center"
            android:text="Course Name"
            android:textSize="25sp"
            android:textStyle="bold"
             />
			
			

        <Button
            android:id="@+id/editbutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="83"
            android:text="Edit"
             />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >
       
            
            <TextView
                
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Instructor Name:"
                android:textSize="20dp" 
                android:textStyle="bold"
                />
           <TextView
                android:id="@+id/instructor_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Instructor Name"
                android:textSize="15dp"/>
                
       
            <TextView
                
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Email:"
                android:textSize="20dp" 
                android:textStyle="bold"
                />
           <TextView
                android:id="@+id/email_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Email"
                android:textSize="15dp"
                android:textColor="#006BB2"/>
                
      
            
            <TextView
                
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Course Weblink:"
                android:textSize="20dp" 
                android:textStyle="bold"
                />
           <TextView
                android:id="@+id/courseLink"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Coures Weblink"
                android:textSize="15dp"
                android:textColor="#006BB2"/>
                
      
            
            <TextView
                
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Course Credits:"
                android:textSize="20dp" 
                android:textStyle="bold"
                />
           <TextView
                android:id="@+id/courseCredits"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Course Credits"
                android:textSize="15dp"/>
                
      
            
            <TextView
                
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Schedule:"
                android:textSize="20dp" 
                android:textStyle="bold"
                />
           <TextView
                android:id="@+id/schedule"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Schedule"
                android:textSize="15dp"/>
       
             <TextView
                
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Office hour and office no.:"
                android:textSize="20dp" 
                android:textStyle="bold"/>
			<TextView
                android:id="@+id/office_hr_add"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Office hour and office no."
                android:textSize="15dp" 
                />
            
           
         
        </LinearLayout>
    </ScrollView>

</LinearLayout>